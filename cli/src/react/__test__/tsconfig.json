{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["*"] // enables us to use @components/MyComponent
    }
  },
  "include": ["*.ts", "*.tsx"]
}
